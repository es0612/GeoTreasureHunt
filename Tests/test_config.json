{
  "testEnvironments": {
    "default": {
      "simulator": "iPhone 15",
      "iosVersion": "17.0",
      "timeout": 30,
      "retryCount": 2,
      "enableLogs": true
    },
    "ci": {
      "simulator": "iPhone 15",
      "iosVersion": "17.0",
      "timeout": 60,
      "retryCount": 3,
      "enableLogs": false,
      "parallelExecution": true
    },
    "performance": {
      "simulator": "iPhone 15 Pro",
      "iosVersion": "17.0",
      "timeout": 120,
      "retryCount": 1,
      "enableLogs": false,
      "measurementIterations": 5
    }
  },
  "testCategories": {
    "flow": {
      "description": "Complete treasure hunt flow tests",
      "testClasses": ["CompleteTreasureHuntFlowTests"],
      "estimatedDuration": "5-10 minutes",
      "requirements": ["1.1", "1.2", "3.1", "3.2", "4.1", "5.1", "5.2", "6.1", "6.2"]
    },
    "scenarios": {
      "description": "Multiple scenario tests including error handling",
      "testClasses": ["MultipleScenarioTests"],
      "estimatedDuration": "10-15 minutes",
      "requirements": ["1.1", "1.2", "6.1", "6.2", "6.5", "7.1", "7.2", "8.1", "8.2", "8.3", "8.4", "8.5", "2.3", "2.5", "10.4", "10.5"]
    },
    "accessibility": {
      "description": "Accessibility compliance tests",
      "testClasses": ["AccessibilityTests"],
      "estimatedDuration": "8-12 minutes",
      "requirements": ["5.1", "5.2", "アクセシビリティ対応"]
    },
    "performance": {
      "description": "Performance and resource usage tests",
      "testClasses": ["PerformanceTests"],
      "estimatedDuration": "15-20 minutes",
      "requirements": ["2.2", "2.4", "5.2", "4.1", "4.2", "7.1", "7.2"]
    },
    "integration": {
      "description": "Comprehensive integration tests covering all requirements",
      "testClasses": ["ComprehensiveIntegrationTests"],
      "estimatedDuration": "20-30 minutes",
      "requirements": ["全要件の統合検証"]
    }
  },
  "mockData": {
    "treasureMaps": [
      {
        "id": "test-map-1",
        "name": "テスト用東京公園",
        "treasureCount": 3,
        "region": {
          "latitude": 35.7148,
          "longitude": 139.7753,
          "radius": 1000
        }
      },
      {
        "id": "test-map-large",
        "name": "大量データテスト用マップ",
        "treasureCount": 100,
        "region": {
          "latitude": 35.6762,
          "longitude": 139.6503,
          "radius": 5000
        }
      }
    ],
    "testScenarios": {
      "weakGPS": {
        "description": "GPS信号弱のシミュレーション",
        "environmentKey": "SIMULATE_WEAK_GPS"
      },
      "locationDenied": {
        "description": "位置情報許可拒否のシミュレーション",
        "environmentKey": "SIMULATE_LOCATION_DENIED"
      },
      "dataCorruption": {
        "description": "データ破損のシミュレーション",
        "environmentKey": "SIMULATE_DATA_CORRUPTION"
      },
      "offline": {
        "description": "オフライン動作のシミュレーション",
        "environmentKey": "SIMULATE_OFFLINE"
      },
      "firstLaunch": {
        "description": "初回起動のシミュレーション",
        "environmentKey": "SIMULATE_FIRST_LAUNCH"
      }
    }
  },
  "reportingConfig": {
    "outputDirectory": "TestResults",
    "generateHTML": true,
    "generateJUnit": true,
    "includeScreenshots": true,
    "includeLogs": true,
    "coverageThreshold": 80
  }
}